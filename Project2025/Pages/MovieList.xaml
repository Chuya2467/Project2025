<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Project2025.Pages.MovieList"
    Title="Movies"
    BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*"
          Padding="8">

        <SearchBar x:Name="SearchBarControl"
                   Grid.Row="0"
                   Placeholder="Search by title"
                   TextChanged="OnSearchChanged"/>

        <ScrollView Grid.Row="1"
                    Orientation="Horizontal"
                    Padding="4">
            <HorizontalStackLayout Spacing="8">

                <Button x:Name="YearSortButton"
                        Text="Year UP"
                        WidthRequest="140"
                        Clicked="OnSortByYear"/>

                <Button x:Name="RatingSortButton"
                        Text="Rating UP"
                        WidthRequest="140"
                        Clicked="OnSortByRating"/>

                <Button Text="Genres"
                        WidthRequest="140"
                        Clicked="OnToggleGenrePanel"/>

                <Button Text="Directors"
                        WidthRequest="140"
                        Clicked="OnToggleDirectorPanel"/>

            </HorizontalStackLayout>
        </ScrollView>

        <ScrollView Grid.Row="2"
                    x:Name="GenrePanel"
                    Orientation="Horizontal"
                    IsVisible="False"
                    HeightRequest="72"
                    BackgroundColor="{DynamicResource PageBackgroundColor}">
            <HorizontalStackLayout x:Name="GenreCheckboxContainer"
                                   Spacing="12"
                                   VerticalOptions="Center"/>
        </ScrollView>

        <ScrollView Grid.Row="3"
                    x:Name="DirectorPanel"
                    Orientation="Horizontal"
                    IsVisible="False"
                    HeightRequest="72"
                    BackgroundColor="{DynamicResource PageBackgroundColor}">
            <HorizontalStackLayout x:Name="DirectorCheckboxContainer"
                                   Spacing="12"
                                   VerticalOptions="Center"/>
        </ScrollView>

        <CollectionView x:Name="MovieListView"
                        Grid.Row="4"
                        SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="6"
                           Padding="10"
                           CornerRadius="8"
                           HasShadow="False">

                        <Grid ColumnDefinitions="50,*">

                            <Label Text="{Binding emoji}"
                                   FontSize="30"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnMovieTap"/>
                                </Label.GestureRecognizers>
                            </Label>

                            <VerticalStackLayout Grid.Column="1"
                                                 Spacing="2">

                                <Label Text="{Binding title}"
                                       FontSize="16"
                                       FontAttributes="Bold">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnMovieTap"/>
                                    </Label.GestureRecognizers>
                                </Label>

                                <Label Text="{Binding year,
                                       StringFormat='Year: {0}'}"
                                       FontSize="12"/>

                                <Label Text="{Binding director}"
                                       FontSize="12"/>

                                <Label Text="{Binding rating,
                                       StringFormat='IMDb: {0:F1}'}"
                                       FontSize="12"/>

                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>