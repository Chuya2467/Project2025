<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project2025.Pages.MovieDetails"
             Title="MovieDetails"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             Padding="20">
    
    <VerticalStackLayout Spacing="22">

        <Label x:Name="EmojiLabel"
           FontSize="60"
           HorizontalOptions="Center"/>

        <Label x:Name="TitleLabel"
           FontSize="28"
           FontAttributes="Bold"
           HorizontalOptions="Center"/>

        <Label x:Name="YearLabel"   FontSize="20"/>
        <Label x:Name="GenreLabel"  FontSize="18"/>
        <Label x:Name="RatingLabel" FontSize="18"/>

        <Button x:Name="FavButton"
            Margin="0,20,0,0"
            Clicked="OnToggleFavourite"/>
    </VerticalStackLayout>
</ContentPage>